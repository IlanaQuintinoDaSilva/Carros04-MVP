<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.livroandroid.carros">

    <!-- Acessar a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Ver informações da rede -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CarrosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="https://ilanadev.page.link" android:scheme="http"/>
                <data android:host="https://ilanadev.page.link" android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.carros.CarrosActivity"
            android:label="@string/carros"
            android:launchMode="singleTop" />
    </application>

</manifest>